{
    "manifest_version": 3,
    "name": "Fact-Checker",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/Search16x16_logo.png",
            "48": "icons/Search48x48_logo.png",
            "128": "icons/Search128x128_logo.png"
        }
    },

    "icons": {
        "16": "icons/Search16x16_logo.png",
        "48": "icons/Search48x48_logo.png",
        "128": "icons/Search128x128_logo.png"
    }
}